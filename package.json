{
	"private": true,
	"homepage": "https://elixir-money.vercel.app/",
	"repository": {
		"type": "git",
		"url": "https://github.com/HarrisFauntleroy/elixir.money-monorepo"
	},
	"license": "MIT",
	"author": {
		"name": "Harris Fauntleroy",
		"url": "https://github.com/HarrisFauntleroy"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"audit:fix": "yarn audit --fix .",
		"build": "turbo run build",
		"clean": "turbo run clean",
		"db:migrate:deploy": "turbo run db:migrate:deploy",
		"db:push": "turbo run db:push",
		"db:seed": "turbo run db:seed",
		"dev": "turbo run dev --parallel",
		"docker:network": "docker network create app_network",
		"docker:prune": "docker system prune --all",
		"format": "prettier --write .",
		"generate": "turbo db:push db:generate",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"test": "turbo run test --concurrency=1",
		"test:watch": "turbo run test:watch"
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSameLine": false,
		"bracketSpacing": true,
		"endOfLine": "lf",
		"htmlWhitespaceSensitivity": "css",
		"importOrder": [
			"^react$",
			"<THIRD_PARTY_MODULES>"
		],
		"importOrderSeparation": true,
		"importOrderSortSpecifiers": true,
		"insertPragma": false,
		"jsxSingleQuote": false,
		"printWidth": 80,
		"quoteProps": "as-needed",
		"requirePragma": false,
		"semi": false,
		"singleQuote": false,
		"tabWidth": 2,
		"trailingComma": "es5",
		"useTabs": true
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "3.4.0",
		"prettier": "2.8.4",
		"tsx": "^3.7.1",
		"turbo": "latest"
	},
	"packageManager": "yarn@1.22.19",
	"engines": {
		"node": ">=14.0.0",
		"npm": ">=7.0.0"
	},
	"yarn": {
		"overrides": {
			"glob-parent@<5.1.2": ">=5.1.2",
			"trim-newlines@<3.0.1": ">=3.0.1",
			"trim@<0.0.3": ">=0.0.3"
		}
	},
	"prisma": {
		"schema": "packages/database/prisma/schema.prisma",
		"seed": "tsx packages/database/src/seed.ts"
	}
}
