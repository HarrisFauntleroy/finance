{
  "private": true,
  "homepage": "https://alchemical-finance.vercel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarrisFauntleroy/alchemical-finance"
  },
  "license": "MIT",
  "author": {
    "name": "Harris Fauntleroy",
    "url": "https://github.com/HarrisFauntleroy"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "dev": "turbo run dev --parallel",
    "docker:prune": "docker system prune --all",
    "format": "prettier --write .",
    "generate": "turbo run generate",
    "lint": "eslint . --color",
    "lint:fix": "eslint . --fix --color",
    "lint:watch": "esw . --ext .js,.jsx,.ts,.tsx --watch --fix --color --changed --clear",
    "prepare": "husky install",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "test": "turbo run test --concurrency=1",
    "test:ci": "turbo run test -- --ci -- --json -- --coverage -- --testLocationInResults -- --outputFile=report.json",
    "test:watch": "turbo run test:watch",
    "type-check": "turbo run type-check --",
    "watch": "turbo run watch --"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn format",
      "yarn lint:fix"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "settings": {
      "import/resolver": {
        "typescript": true,
        "node": true
      },
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      },
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort",
      "import",
      "security",
      "sonarjs",
      "jsx-a11y",
      "prettier",
      "jest",
      "progress"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended",
      "plugin:import/typescript",
      "plugin:import/recommended",
      "plugin:security/recommended",
      "plugin:sonarjs/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:storybook/recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "import/extensions": "off",
      "simple-import-sort/imports": [
        "off",
        {
          "groups": [
            [
              "^react$"
            ],
            [
              "^(ui|common|database|database/generated/prisma-client)$"
            ],
            [
              "^[./]"
            ]
          ]
        }
      ],
      "security/detect-object-injection": "off",
      "@next/next/no-html-link-for-pages": "off",
      "progress/activate": 1
    },
    "ignorePatterns": [
      ".yarn",
      "dist",
      "generated",
      "node_modules"
    ],
    "root": true
  },
  "dependencies": {
    "@changesets/cli": "^2.26.1",
    "@octokit/types": "^9.2.3",
    "opencommit": "^2.2.10"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^13.4.6",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-progress": "^0.0.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "0.19.0",
    "eslint-plugin-storybook": "^0.6.12",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "2.8.8",
    "turbo": "1.10.3"
  },
  "packageManager": "yarn@3.5.1",
  "engines": {
    "node": ">=v16.20.0",
    "npm": ">=7.24.2"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} packages/database/prisma/seed.ts"
  },
  "yarn": {
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "trim-newlines@<3.0.1": ">=3.0.1",
      "trim@<0.0.3": ">=0.0.3"
    }
  }
}
