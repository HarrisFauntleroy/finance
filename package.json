{
  "private": true,
  "homepage": "https://alchemical-finance.vercel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarrisFauntleroy/alchemical-finance"
  },
  "license": "MIT",
  "author": {
    "name": "Harris Fauntleroy",
    "url": "https://github.com/HarrisFauntleroy"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo",
    "db:generate": "turbo run db:generate",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "dev": "turbo run dev --parallel",
    "docker:prune": "docker system prune --all",
    "format": "prettier --write .",
    "lint": "eslint . --color --plugin file-progress --rule \"file-progress/activate: 1\"",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "test": "turbo run test --concurrency=1 -- --colors",
    "test:watch": "turbo run test:watch",
    "type-check": "turbo run type-check --",
    "watch": "turbo run watch --",
    "size": "git count-objects --human-readable"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn format",
      "yarn lint:fix"
    ],
    "*.{kt,kts}": [
      "apps/backend/scripts/dev/ktlint.sh"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "settings": {
      "import/resolver": {
        "typescript": true,
        "node": true
      },
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      },
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "simple-import-sort"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:promise/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:security/recommended",
      "plugin:unicorn/recommended",
      "plugin:sonarjs/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:storybook/recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "unicorn/prefer-module": "off",
      "no-unused-vars": "off",
      "unicorn/no-process-exit": "off",
      "unicorn/no-null": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/filename-case": [
        "off",
        {
          "cases": {
            "pascalCase": true,
            "camelCase": true
          }
        }
      ],
      "react/react-in-jsx-scope": "off",
      "security/detect-object-injection": "off",
      "@next/next/no-html-link-for-pages": "off",
      "simple-import-sort/imports": [
        "off",
        {
          "groups": [
            [
              "^react$"
            ],
            [
              "^(ui|common|database|database/generated/prisma-client)$"
            ],
            [
              "^[./]"
            ]
          ]
        }
      ]
    },
    "ignorePatterns": [
      "dist",
      ".yarn",
      "reports",
      "coverage",
      "generated",
      "node_modules"
    ],
    "root": true
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@next/eslint-plugin-next": "^14.0.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.43.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-file-progress": "^1.3.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "0.19.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-unicorn": "^50.0.1",
    "eslint-watch": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "3.1.1",
    "turbo": "1.10.5"
  },
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.5"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} packages/database/prisma/seed.ts"
  },
  "yarn": {
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "trim-newlines@<3.0.1": ">=3.0.1",
      "trim@<0.0.3": ">=0.0.3"
    }
  }
}
