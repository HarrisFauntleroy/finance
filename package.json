{
  "private": true,
  "homepage": "https://elixir-money.vercel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarrisFauntleroy/elixir.money-monorepo"
  },
  "license": "MIT",
  "author": {
    "name": "Harris Fauntleroy",
    "url": "https://github.com/HarrisFauntleroy"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "audit:fix": "yarn audit --fix .",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "dev": "turbo run dev --parallel",
    "docker:prune": "docker system prune --all",
    "fix": "turbo run fix",
    "format": "prettier --write .",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix --",
    "lint:watch": "turbo run lint:watch --",
    "prepare": "husky install",
    "test": "turbo run test --concurrency=1",
    "test:ci": "turbo run test:ci",
    "test:watch": "turbo run test:watch",
    "type-check": "turbo run type-check --",
    "watch": "turbo run watch --"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn type-check",
      "yarn lint:fix",
      "yarn format"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "strict",
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false,
    "vueIndentScriptAndStyle": false
  },
  "eslintConfig": {
    "root": true,
    "settings": {
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      }
    },
    "ignorePatterns": [
      ".yarn",
      "dist",
      "node_modules"
    ]
  },
  "packageManager": "yarn@3.5.0",
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "2.8.7",
    "turbo": "1.9.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  },
  "yarn": {
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "trim-newlines@<3.0.1": ">=3.0.1",
      "trim@<0.0.3": ">=0.0.3"
    }
  }
}
