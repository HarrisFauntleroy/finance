{
  "private": true,
  "homepage": "https://alchemical-finance.vercel.app/",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarrisFauntleroy/alchemical-finance"
  },
  "license": "MIT",
  "author": {
    "name": "Harris Fauntleroy",
    "url": "https://github.com/HarrisFauntleroy"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "audit:fix": "yarn audit --fix .",
    "build": "turbo run build",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "dev": "turbo run dev --parallel",
    "docker:prune": "docker system prune --all",
    "fix": "turbo run fix",
    "format": "prettier --write .",
    "generate": "turbo run generate",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix --",
    "lint:watch": "turbo run lint:watch --",
    "prepare": "husky install",
    "test": "turbo run test --concurrency=1",
    "test:ci": "turbo run test:ci",
    "test:watch": "turbo run test:watch",
    "type-check": "turbo run type-check --",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "watch": "turbo run watch --"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "echo '[Husky] post-commit'",
      "pre-push": "yarn test && yarn lint && yarn build",
      "post-checkout": "echo '[Husky] post-checkout'",
      "post-merge": "echo '[Husky] post-merge'",
      "post-rewrite": "echo '[Husky] post-rewrite'"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": []
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "always",
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "settings": {
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      }
    },
    "ignorePatterns": [
      ".yarn",
      "dist",
      "node_modules"
    ],
    "root": true
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "2.8.8",
    "turbo": "1.10.1"
  },
  "packageManager": "yarn@3.5.1",
  "engines": {
    "node": ">=v16.20.0",
    "npm": ">=7.24.2"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma",
    "seed": "tsx packages/database/src/seed.ts"
  },
  "yarn": {
    "overrides": {
      "glob-parent@<5.1.2": ">=5.1.2",
      "trim-newlines@<3.0.1": ">=3.0.1",
      "trim@<0.0.3": ">=0.0.3"
    }
  },
  "dependencies": {
    "@changesets/cli": "^2.26.1",
    "@octokit/types": "^9.2.3",
    "opencommit": "^2.2.10"
  }
}
