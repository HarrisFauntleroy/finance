{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./",
    "declaration": true
  },
  "include": ["generated/zod", "src", "**/*.config.ts", "prisma/seed.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "generated/prisma-client",
    "**/*.stories.*"
  ]
}
