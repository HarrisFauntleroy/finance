{
  "name": "database",
  "version": "2.0.0",
  "private": true,
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarrisFauntleroy/alchemical-finance"
  },
  "license": "MIT",
  "author": {
    "name": "Harris Fauntleroy",
    "url": "https://github.com/HarrisFauntleroy"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "generate": "prisma generate --schema=prisma/schema.prisma",
    "preinstall": "{{ packageManager }} install",
    "postinstall": "generate",
    "predev": "generate",
    "dev": "concurrently \"yarn build --watch\" \"yarn prisma studio\" \"yarn prisma generate --watch\"",
    "prebuild": "generate",
    "build": "tsup",
    "postbuild": "prisma migrate deploy",
    "db:seed": "tsx src/seed.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate",
    "lint": "esw . --ext .js,.jsx,.ts,.tsx --color",
    "lint:fix": "esw . --ext .js,.jsx,.ts,.tsx --fix --color",
    "lint:watch": "esw . --ext .js,.jsx,.ts,.tsx --watch --fix --color --changed --clear",
    "prepare": "build",
    "start": "NODE_ENV=production node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:ci": "yarn test --ci --coverage --maxWorkers=2",
    "test:watch": "yarn test --watchAll",
    "type-check": "tsc --noEmit",
    "watch": "yarn type-check --watch"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "settings": {
      "import/resolver": {
        "typescript": true,
        "node": true
      },
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort",
      "import",
      "sonarjs",
      "prettier"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended",
      "plugin:import/typescript",
      "plugin:import/recommended",
      "plugin:sonarjs/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "import/extensions": "off",
      "simple-import-sort/imports": [
        "error",
        {
          "groups": [
            [
              "^react$"
            ],
            [
              "^(ui|common|database|database/generated/prisma-client)$"
            ],
            [
              "^[./]"
            ]
          ]
        }
      ]
    },
    "ignorePatterns": [
      ".turbo",
      "dist",
      "node_modules",
      "prisma/migrations",
      "generated"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": ".test.*",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "@prisma/client": "^4.15.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/types": "29.5.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.16",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "concurrently": "^8.0.1",
    "eslint": "^8.42.0",
    "eslint-config-next": "13.4.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "0.19.0",
    "eslint-watch": "^8.0.0",
    "jest": "29.5.0",
    "prisma": "^4.15.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "tsup": "^6.7.0",
    "tsx": "^3.12.7",
    "typescript": "5.0.4"
  },
  "packageManager": "yarn@3.5.1"
}
