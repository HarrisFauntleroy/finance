{
	"name": "common",
	"version": "1.0.1",
	"license": "MIT",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist/**"
	],
	"scripts": {
		"build": "tsup",
		"clean": "rimraf .turbo node_modules dist",
		"dev": "tsup --watch",
		"format": "prettier --write .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"start": "NODE_ENV=production ts-node dist/index.js",
		"test": "jest --passWithNoTests",
		"test:watch": "yarn test --watch",
		"test:ci": "yarn test --ci --coverage --maxWorkers=2",
		"type-check": "tsc --noEmit"
	},
	"jest": {
		"moduleDirectories": [
			"node_modules",
			"src"
		],
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"roots": [
			"src"
		],
		"testEnvironment": "node",
		"testRegex": ".test.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		}
	},
	"dependencies": {
		"currency.js": "^2.0.4",
		"database": "*",
		"prisma": "*",
		"zod": "^3.19.1"
	},
	"devDependencies": {
		"config": "*",
		"eslint": "^8.12.0",
		"rimraf": "^3.0.2",
		"tsconfig": "*",
		"tsup": "^5.11.13",
		"tsx": "^3.7.1",
		"@types/jest": "29.2.2",
		"typescript": "^4.5.5"
	}
}
