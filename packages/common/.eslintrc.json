{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "./tsconfig.json"
	},
	"plugins": [
		"@typescript-eslint",
		"import",
		"typescript-sort-keys",
		"prettier"
	],
	"extends": [
		"airbnb-typescript/base",
		"prettier",
		"plugin:@typescript-eslint/recommended",
		"plugin:import/typescript"
	],
	"env": {
		"browser": true,
		"node": true,
		"jest": true,
		"es6": true
	}
}
