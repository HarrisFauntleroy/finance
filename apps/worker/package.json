{
  "name": "worker",
  "version": "1.0.0",
  "description": "Bullmq, redis and typescript based worker",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p .",
    "dev": "NODE_ENV=development nodemon src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix && yarn format",
    "start": "NODE_ENV=production ts-node dist/index.js",
    "test": "jest ",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "type-check": "tsc --noEmit"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1"
    },
    "roots": [
      "src"
    ],
    "testEnvironment": "node",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@bull-board/express": "4.6.3",
    "axios": "1.1.3",
    "bullmq": "1.90.2",
    "common": "*",
    "database": "*",
    "dinero.js": "1.9.1",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "prisma": "*"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "3.4.0",
    "@types/dinero.js": "1.9.0",
    "@types/express": "4.17.14",
    "@types/jest": "29.2.2",
    "@types/node": "18.7.17",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  }
}
