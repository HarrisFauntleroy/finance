{
	"compilerOptions": {
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"isolatedModules": true,
		"jsx": "preserve",
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"**/*.jsx",
		"./i18next-parser.config.js"
	],
	"exclude": ["dist", "node_modules"]
}
